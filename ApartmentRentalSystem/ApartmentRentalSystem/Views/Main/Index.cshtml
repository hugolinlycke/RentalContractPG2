    <div id="bottom">
        <div id="searchBox">
            @using (Html.BeginForm())
            {
                <table style="margin-left:100px;">
                    <tr style="margin-top: 50px;">
                        <td style="font-weight:bold;">Enter location: </td>
                        <td style="font-weight:bold;">Enter Min price: </td>
                        <td style="font-weight:bold;">Enter Max price: </td>
                        <td style="font-weight:bold;">Enter room: </td>
                    </tr>
                    <tr>
                        <td>@Html.TextBox("location")</td>
                        <td>@Html.TextBox("Minprice")</td>
                        <td>@Html.TextBox("Maxprice")</td>
                        <td>@Html.TextBox("room")</td>
                    </tr>

                </table>
                <input type="submit" value="Submit" style="margin-left:47%; margin-top:20px;">
            }

        </div>

        <div id="apartements">

            @foreach (var item in Model)
            {<table style="float:left;margin:5px;">
                    <tr>
                        <td colspan="2"><img src="@Url.Content(item.Picture)" class="apartmentPictures" /></td>
                    </tr>
                    <tr style="border:2px solid black">
                        <td>@Html.DisplayFor(x => item.NumberOfRooms) rooms</td>
                        <td>@Html.DisplayFor(x => item.Price) kr/month</td>
                    </tr>
                    <tr style="border:2px solid black">
                        <td>@Html.DisplayFor(x => item.Location)</td>
                        <td>@Html.DisplayFor(x => item.SizeOfApartment) kvm</td>
                    </tr>
                    <tr style="border:2px solid black">
                        <td>@Html.DisplayFor(x => item.Address)</td>
                        <td>@Html.ActionLink("Go To", "ApartmentAsync", "Main", 
                           new { 
                               Id = item.Id 
