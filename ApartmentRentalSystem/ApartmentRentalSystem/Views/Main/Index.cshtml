@model IEnumerable<ApartmentRentalSystem.Models.Apartment>


@{
    ViewBag.Title = "MainPage";
}

<html lang="de">

<head>
    <style>
        #icons {
            position: relative;
            top: 400px;
            left: 500px;
        }

        .Parent {
            position: relative;
        }

        .picture {
            margin-top: 150px;
            margin-bottom: 20px;
            width: 300px;
            height: 200px;
        }

        #mainScreenTop {
            position: relative;
            height: 700px;
            background-color: lightgoldenrodyellow;
        }

        .mainScreenTopField {
            float: left;
            width: 32%;
            margin-right: 2%;
            box-sizing: border-box;
            text-align: center;
        }

            .mainScreenTopField:last-child {
                margin-right: 0;
            }

        #bottom {
            position: absolute;
            width: 100%;
            height: 1500px;
            background-color: lightgreen;
            left: 0;
            border-top: 5px solid black;
        }

        #searchBox {
            position: relative;
            top: 200px;
            left: 50%;
            height: 130px;
            width: 900px;
            transform: translate(-50%, -50%);
            background-color: lightgoldenrodyellow;
        }

        #apartements {
            position: relative;
            top:200px;
            left: 50%;
            height: auto;
            width: 1300px;
            transform: translate(-50%, -50%);
            background-color: pink;
        }

        #footer {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 500px;
            width: 100%;
            background-color: red;
        }
        .apartment_bild{
            width:50px;
            height:50px;
        }
        img.apartment {
            width: 200px;
        }
        td {
            width: 100px;
        }
        img.apartmentPictures{
            width:200px;
            height:200px;
        }
    </style>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript"> /* This javaScript is used to have a pop-up message box when something is achived */

            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>

    }
    <meta charset="ascii">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apartment Rental</title>

</head>
